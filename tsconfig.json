{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "removeComments": true,
    "skipLibCheck": true,
    "paths": {
      "@middleware": ["middleware"],
      "@errors": ["errors"],
      "@interfaces": ["interfaces"],
      "@constants": ["constants"],
      "@entities": ["entities"],
      "@types": ["types"],
      "@languages": ["api/v1/languages"],
      "@users": ["api/v1/users"],
      "@words": ["api/v1/words"],
      "@cards": ["api/v1/cards"],
      "@tasks": ["api/v1/tasks"],
      "@answers": ["api/v1/answers"],
      "@config": ["config.ts"],
      "@migrations": ["migrations"],
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true
  },
}
